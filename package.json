{
  "name": "bookpost",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@bookpost/web",
    "dev:server": "npm run dev --workspace=@bookpost/server",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "build": "npm run build --workspace=@bookpost/web",
    "build:server": "npm run build --workspace=@bookpost/server",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "upload:s3": "node scripts/upload-to-s3.js",
    "upload:s3:dry": "node scripts/upload-to-s3.js --dry-run"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
